<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.reine.imagehost.ui.controller.Main">
    <center>
        <StackPane onMouseClicked="#selectImage" onMouseEntered="#onMouseEntered" onMouseExited="#onMouseExited" onDragDropped="#boxDragDropped" onDragOver="#boxDragOver" prefHeight="150.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <Label fx:id="label" text="拖拽图片到此处" textFill="#0000005c">
                <font>
                    <Font size="35.0" />
                </font>
            </Label>
            <ImageView fx:id="ivImage" pickOnBounds="true" preserveRatio="true" />
            <BorderPane.margin>
                <Insets top="20.0" />
            </BorderPane.margin>
        </StackPane>
    </center>
    <bottom>
        <VBox alignment="CENTER" prefHeight="100.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <HBox alignment="CENTER" spacing="50.0">
                <TextField fx:id="tfProject" prefHeight="30.0" prefWidth="398.0" />
                <Button mnemonicParsing="false" onAction="#uploadFile" text="上传" />
            </HBox>
            <TextField fx:id="tfInfo" editable="false" visible="false" />
        </VBox>
    </bottom>
    <top>
        <HBox alignment="CENTER" spacing="50.0" BorderPane.alignment="CENTER">
            <TextField fx:id="tfPath" editable="false" prefHeight="30.0" prefWidth="398.0" />
            <Button mnemonicParsing="false" onAction="#updatePath" text="修改" />
            <BorderPane.margin>
                <Insets top="10.0" />
            </BorderPane.margin>
        </HBox>
    </top>
</BorderPane>
